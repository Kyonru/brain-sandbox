{
  "compilerOptions": {
    "strict": true, 
    // "forceConsistentCasingInFileNames": true  ,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "target": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,  
    "baseUrl": "./src",
    "module": "commonjs",
    "pretty": true,
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "jest.config.js"
  ]
}
